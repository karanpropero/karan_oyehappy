{% assign isInstallOneUpsell = false %}

{% if content_for_header contains 'flashify' %}

    <script>
        window.one_upsell = {
            product: {{ product | t | json }},
            collections: {{ product.collections | json }},
            shop: {
                id: '{{ shop.id }}',
                domain: '{{ shop.domain }}',
                shopify_domain: '{{ shop.permanent_domain }}',
                currency: '{{ shop.currency }}',
            },
            request: {
                page_type: '{{ request.page_type }}'
            },
            cart:[],
            customer: {
                id: '{{ customer.id }}'
            }
        }

        {% for variant in product.variants %}
            window.one_upsell.product.variants[ {{forloop.index}} - 1 ].inventory_quantity = '{{ variant.inventory_quantity }}';
            window.one_upsell.product.variants[ {{forloop.index}} - 1 ].inventory_policy   = '{{ variant.inventory_policy }}';
        {% endfor %}

        if( one_upsell.request.page_type === 'product' ){
            window.one_upsell.product.options = [];
            {% for option_name in product.options %}
                window.one_upsell.product.options.push( {{ product.options_by_name[ option_name ] | json }} ) ;
            {% endfor %}
        }

        {% for item in cart.items %}

            cart_item = {{ item | json }};
            cart_item.in_collections = {{ item.product.collections | map: 'id' | json }};
            window.one_upsell.cart.push( cart_item );

        {% endfor %}

    </script>

    <input type="hidden" value="{{ shop.url }}" id="flashify-shop-url">
    <link rel="stylesheet" href=https://static-socialhead.cdnhub.co/flashify/flashsale.min.css />

{% endif %}