<div id="corp-contact-form"
  class="index-section newsletter-{{ section.id }} custom_news_corp color-scheme-{{ section.settings.color_scheme }}"
  style="background-image:url({{ section.settings.bgimage | img_url:'master' }});"
>
  <div class="top_image">
    <img src="https://cdn.shopify.com/s/files/1/0593/5346/4994/files/Ellipse_10.png?v=1661172393">
  </div>
  <div class="bottom_image">
    <img src="https://cdn.shopify.com/s/files/1/0593/5346/4994/files/Ellipse_9.png?v=1661172393">
  </div>
  {%- if section.settings.color_scheme != 'none' -%}
    {%- render 'color-scheme-texture', color_scheme: section.settings.color_scheme -%}
  {%- endif -%}
  <div class="page-width{% if section.settings.narrow_column %} page-width--narrow{% endif %} form-narrow-con">
    {%- if section.settings.title != blank or section.settings.text != blank -%}
      <div class="section-header text-center">
        {%- if section.settings.title != blank -%}
          <h2 class="section-header__title titltcorp">
            {{ section.settings.title }}
          </h2>
        {%- endif -%}
        {%- if section.settings.text != blank -%}
          <div class="rte section-header__rte">{{ section.settings.text }}</div>
        {%- endif -%}
      </div>
    {% endif %}

    <div class="form-vertical contact-corp-form">
      {%- assign form_id = 'contact-' | append: section.id -%}
      {%- form 'contact', id: form_id -%}
        {%- if form.posted_successfully? -%}
          <p class="note note--success">
            {{ 'contact.form.post_success' | t }}
          </p>
        {%- endif -%}

        {{ form.errors | default_errors }}

        <div class="grid grid--small">
          <div class="grid__item medium-up--one-half">
            <!-- <label for="ContactFormName-{{ section.id }}">{{ 'contact.form.name' | t }}</label> -->
            <input
              type="text"
              id="ContactFormName-{{ section.id }}"
              class="input-full"
              name="contact[name]"
              placeholder="Your name"
              autocapitalize="words"
              value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}"
            >
          </div>
          <div class="grid__item medium-up--one-half">
            <input
              type="text"
              id="ContactFormcompany-{{ section.id }}"
              class="input-full"
              name="contact[company]"
              placeholder="Your company"
              autocapitalize="words"
              value=""
            >
          </div>
          <!--
            <div class="grid__item medium-up--one-half">

            </div>
          -->
        </div>
        <div class="grid grid--small">
          <div class="grid__item medium-up--one-half">
            <input
              type="email"
              id="ContactFormEmail-{{ section.id }}"
              class="input-full"
              name="contact[email]"
              placeholder="Your email address"
              autocorrect="off"
              autocapitalize="off"
              value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
            >
          </div>
          <div class="grid__item medium-up--one-half">
            <input
              type="text"
              id="ContactFormoccasion-{{ section.id }}"
              class="input-full"
              name="contact[Occasion]"
              placeholder="Occasion"
              value=""
            >
          </div>
        </div>
        <div class="grid grid--small">
          <div class="grid__item medium-up--one-half">
            {%- if section.settings.show_phone -%}
              <!-- <label for="ContactFormPhone-{{ section.id }}">{{ 'contact.form.phone' | t }}</label> -->
              <input
                type="tel"
                id="ContactFormPhone-{{ section.id }}"
                class="input-full"
                name="contact[phone]"
                placeholder="Phone"
                pattern="[0-9\-]*"
                value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}"
              >
            {%- endif -%}

            <input
              type="number"
              id="ContactFormquantity-{{ section.id }}"
              class="input-full custom_select_corp"
              name="contact[Quantity]"
              placeholder="Gift quantity required"
            >

            <input
              type="date"
              style="color:#a6a6a6"
              id="ContactFormOccasiondate-{{ section.id }}"
              class="input-full occasiondate"
              name="contact[Occasion_date]"
              placeholder="Tentative delivery date"
              value=""
            >
          </div>
          <div class="grid__item medium-up--one-half">
            <textarea
              rows="3"
              id="ContactFormMessage-{{ section.id }}"
              placeholder="Any other information to help curate your requirement"
              class="input-full corp_full"
              name="contact[body]"
            >{% if form.body %}{{ form.body }}{% endif %}</textarea>
            <button type="submit" class="btn submit_btnofcorp desktopbtn_submit">Submit</button>
          </div>
        </div>

        <div class="grid grid--small">
          <div class="grid__item medium-up--one-half"></div>
        </div>

        <button type="submit" class="btn submit_btnofcorp mobilebtn_submit">Submit</button>
      {%- endform -%}
    </div>

    <div class="corp_or_s">or</div>
    <div class="section--divider" style="padding-top: 0px;"></div>
  </div>

  <div class="page-width{% if section.settings.narrow_column %} page-width--narrow{% endif %} form-narrow-con">
    <div>
      <div class="btncorpcall">
        <img src="https://cdn.shopify.com/s/files/1/0593/5346/4994/files/Group_365_1.png?v=1661250199">

        <button class="corp_btn">
          <a href="tel:+918143625575">Call us on 8143625575</a>
        </button>
      </div>
    </div>
  </div>
</div>

<style>
