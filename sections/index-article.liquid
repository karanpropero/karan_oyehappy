<div class="page-width">
{%- if section.settings.title != blank -%}
  <header class="section-header section-header--with-link">
    <h2 class="section-header__title">
      {{ section.settings.title | escape }}
    </h2>
  </header>
{%- endif -%}
<div class="blog-layout">
<div class="blog-layout__sidebars new-grid">
{% for block in section.blocks %}
{% assign article = articles[block.settings.article] %}
{% if article != blank %}
<div class="grid-item grid-article" data-style="small">
     {%- if article.image != blank -%}
<div class="grid-article__image">
  <a href="{{ article.url }}">
<div class="image-wrap">
            <div class="grid__image-ratio grid__image-ratio--square">
               <img src="{{ article.image | img_url: 'master' }}" alt="">
            </div>
            
          </div>
      
  </a>
</div>
  {%- endif -%}

<div class="grid-article__meta">
  <a href="{{ article.url }}" class="article__title">{{ article.title }}</a>
  
    <div class="article__sub-meta">
      <span class="article__sub-meta-date">{{ article.published_at | date: '%B %d, %Y' }}</span>
    </div>
    
</div>
</div>
  {% endif %}
{% endfor %}



</div>

</div>


</div>

{% schema %}
{
  "name": "Featured Article",
  "class": "index-section featured_article",
  "settings": [
   {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Featured Article"
    }
  ],
   "blocks": [
    {
      "type": "article",
      "name": "Choose Blog Post",
      "settings": [
        {
      "id": "article",
      "type": "article",
      "label": "Select Article"
      }
     ]
    }
    
  ],
  "presets": [{
    "name": "Featured Article",
    "blocks": [
      {
        "type": "article"
      },
      {
        "type": "article"
      }
    ]
  }]
}
{% endschema %}

